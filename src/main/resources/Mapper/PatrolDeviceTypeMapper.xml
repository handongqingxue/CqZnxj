<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqZnxj.dao.PatrolDeviceTypeMapper">
	<insert id="add" parameterType="com.cqZnxj.entity.PatrolDeviceType">
		insert into patrol_device_type
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name!=null">
				name,
			</if>
				createTime,
			<if test="sort!=null">
				sort,
			</if>
			<if test="memo!=null">
				memo,
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name!=null">
				#{name},
			</if>
				now(),
			<if test="sort!=null">
				#{sort},
			</if>
			<if test="memo!=null">
				#{memo},
			</if>
		</trim>
	</insert>
	<delete id="deleteByIds">
		delete from patrol_device_type where 1=1
		<foreach collection="list" item="id" open=" and cast(id as char) in (" separator="," close=")">
		#{id}
		</foreach>
	</delete>
	<update id="edit" parameterType="com.cqZnxj.entity.PatrolDeviceType">
		update patrol_device_type set name=#{name},updateTime=now(),sort=#{sort},memo=#{memo} where id=#{id}
	</update>
	<select id="queryForInt" resultType="java.lang.Integer">
		select count(*) from patrol_device_type where 1=1
		<if test="name!=''&amp;name!=null">
			and name like CONCAT('%',#{name},'%')
		</if>
	</select>
	<select id="queryList" resultType="com.cqZnxj.entity.PatrolDeviceType">
		select * from patrol_device_type where 1=1
		<if test="name!=''&amp;name!=null">
			and name like CONCAT('%',#{name},'%')
		</if>
		order by createTime
		limit #{rowNum},#{rows}
	</select>
	<select id="selectById" resultType="com.cqZnxj.entity.PatrolDeviceType">
		select * from patrol_device_type where id=#{id}
	</select>
	<select id="queryCBBList" resultType="com.cqZnxj.entity.PatrolDeviceType">
		select id,name from patrol_device_type order by sort
	</select>
</mapper>